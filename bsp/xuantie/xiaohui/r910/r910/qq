import os
import rtconfig
from building import *

Import('SDK_LIB')

cwd = GetCurrentDir()

# add general drivers
src = ['atomic_riscv.c']
src += ['clint.c']
src += ['context_gcc.S']
src += ['cpuport.c']
src += ['interrupt_gcc.S']
src += ['interrupt.c']

path =  [cwd]

group = DefineGroup('Drivers', src, depend = [''], CPPPATH = path)
Return('group')
